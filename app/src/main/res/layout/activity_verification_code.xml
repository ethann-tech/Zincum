<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityVerificationCode">

    <include
        android:id="@+id/include_layout_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.ethan.zincum.widget.VerificationCodeEditText
        android:id="@+id/verificationEdit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="36sp"
        app:cursorDrawable="@drawable/shape_cursor"
        app:cursorDrawableHeight="25dp"
        app:cursorDrawableWidth="1dp"
        app:isSquare="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_layout_toolbar"
        app:space="16dp"
        app:textBackground="@drawable/verification_bg_line" />

    <com.ethan.zincum.widget.VerificationCodeEditText
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:cursorDrawable="@drawable/shape_cursor"
        app:cursorDrawableHeight="25dp"
        app:cursorDrawableWidth="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verificationEdit"
        app:space="10dp"
        app:textBackground="@drawable/verification_bg_square" />

</androidx.constraintlayout.widget.ConstraintLayout>